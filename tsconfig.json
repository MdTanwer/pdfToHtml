{
  "compilerOptions": {
    "outDir": "./dist",          // Output directory for compiled JS files
    "module": "commonjs",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],      // Include all TS files in the project
  "exclude": ["node_modules"]    // Exclude node_modules from compilation
}
